<%= form_for @blog, html: { multipart: true} do |form| %>

  <h2>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </h2>
  <br>
  <p>
    <%= form.label :gender %><br>
    <%= form.text_area :gender %>
  </p>
  <br>
  <p>
    <%= form.label :season %><br>
    <%= form.text_area :season %>
  </p>
  <br>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <br>
  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>
  <br>
  <p>
    <%= form.submit %>
  </p>

<% end %>
