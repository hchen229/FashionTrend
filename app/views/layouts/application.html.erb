<!DOCTYPE html>
<html>
  <head>
    <title>Trendy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

    <div class="navbar" >
    <a><%= link_to "Home", root_path %></a>
    <a><%= link_to 'New Blog', new_blog_path %></a>

    <% if user_signed_in? %>
    <a><%= link_to('Logout', destroy_user_session_path, method: :delete) %></a>
    <% else %>
    <a><%= link_to('Login', new_user_session_path)  %></a>
    <% end %>

    <% if user_signed_in? %>
    <a><%= link_to('Account', edit_user_registration_path) %></a>
    <% else %>
    <a><%= link_to('Sign Up', new_user_registration_path)  %></a>
    <% end %>
    </div>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
